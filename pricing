    <script>
        // Ensure DOM is fully loaded
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize with simple view active
            showSimple();
        });
        
        function showSimple() {
            const simpleView = document.querySelector('.simple-view');
            const detailedView = document.querySelector('.detailed-view');
            const buttons = document.querySelectorAll('.toggle-button');
            
            if (simpleView && detailedView && buttons.length >= 2) {
                simpleView.classList.add('active');
                detailedView.classList.remove('active');
                buttons[0].classList.add('active');
                buttons[1].classList.remove('active');
            }
        }
        
        function showDetailed() {
            const simpleView = document.querySelector('.simple-view');
            const detailedView = document.querySelector('.detailed-view');
            const buttons = document.querySelectorAll('.toggle-button');
            
            if (simpleView && detailedView && buttons.length >= 2) {
                simpleView.classList.remove('active');
                detailedView.classList.add('active');
                buttons[0].classList.remove('active');
                buttons[1].classList.add('active');
            }
        }
    </script>
</body>
